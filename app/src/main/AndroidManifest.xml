<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ramil.myuniversity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- TODO danger with handling configuration changes -->

        <activity android:name=".homescreen.HomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".auth.SignupActivity" />
        <activity android:name=".otherviews.ChatActivity" />
        <activity android:name=".otherviews.MailActivity" />
        <activity android:name=".otherviews.ScheduleActivity" />
        <activity android:name=".otherviews.FreelanceActivity"/>
    </application>

</manifest>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="toolbarNavigationButtonStyle">@style/BackArrow</item>
        <item name="actionOverflowButtonStyle">@style/ActionOverflow</item>
    </style>

    <!-- Toolbar theme -->
    <style name="ToolbarTheme" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <!-- Toolbar title -->
    <style name="ToolbarTitle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Toolbar navigation button -->
    <style name="BackArrow" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Toolbar action overflow button -->
    <style name="ActionOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Navigation View theme -->
    <style name="NavigationViewTheme">
        <item name="android:textSize">16sp</item> <!-- text size of menu's items -->
        <item name="android:fontFamily">serif</item>
    </style>

</resources>
